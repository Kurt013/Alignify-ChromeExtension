{
    "manifest_version": 3,
    "name": "Posture Corrector - CHROME EXTENSION",
    "description": "This extension will ensure that you are always in correct posture during long hours of sitting.",
    "version": "1.0",
    "permissions": [
      "scripting",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],  
        "js": ["./node_modules/@tensorflow/tfjs/dist/tf.min.js"]         
      },
      {
        "matches": ["<all_urls>"],   
        "js": ["./node_modules/@teachablemachine/pose/dist/teachablemachine-pose.min.js"]        
      }
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "my_model/*",
          "assets/notif_sound.mp3"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }
  